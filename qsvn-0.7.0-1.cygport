inherit qt4-cmake

DESCRIPTION="Qt Subversion GUI"
HOMEPAGE="http://www.anrichter.net/projects/qsvn/"
SRC_URI="http://www.anrichter.net/projects/qsvn/chrome/site/${P}-src.tar.gz"
PATCH_URI="0.7.0-fix-lib.patch"

SRC_DIR="${P}/src"

abi=4
PKG_NAMES="${PN} libsvnqt-qt4_4 libsvnqt-qt4-devel"
PKG_CONTENTS[0]="usr/bin/*.exe usr/share/doc/"
PKG_CONTENTS[1]="usr/bin/*-${abi}.dll"
PKG_CONTENTS[2]="usr/include/ usr/lib/"

DOCS="../README"
